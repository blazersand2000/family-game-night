{
   "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "baseUrl": ".",
      "paths": {
         "shared/*": ["../shared/src/*"],
         "@/*": ["./src/*"]
      }
   },
   "compileOnSave": true,
   "include": ["src/**/*"],
   "references": [{ "path": "../shared/tsconfig.json" }]
}
