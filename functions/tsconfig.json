{
   "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "composite": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
      "baseUrl": ".",
      "paths": {
         "shared/*": ["../shared/dist/*"],
         "@/*": ["./src/*"]
      }
   },
   "compileOnSave": true,
   "references": [{ "path": "../shared" }],
   "include": ["src/**/*"]
}
